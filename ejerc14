package ejerc14;

import java.util.Scanner;

public class ejerc14 {
	public static void main(String[] args) {
		int edad;
		Scanner ingreso = new Scanner(System.in);

		System.out.println("ingrese su edad: ");
		edad = ingreso.nextInt();

		System.out.println("Â¿pago la entrada? (true/false): ");
		boolean pagoEntrada = ingreso.nextBoolean();//variable booleana

		if (edad >= 18) {//condicional anidada
         //el if pricipal se refiere a la edad 
			
	   //en cambio los que les siguen se refieren al pago 	
			if (pagoEntrada) {
				System.out.println("entrada valida");
			} else {
				System.out.println("entrada no abonada, No puede ingresar. ");

			}
		} else {
			System.out.println("entrada no permitida. ");
		}
		

	}

}
