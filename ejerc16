package ejercicio16;

import java.util.Scanner;

public class ejerc16 {

	public static void main(String[] args) {

		int num;
		Scanner ingreso = new Scanner(System.in);

		System.out.println("que quiere ingrese el num correspondiente "

				+ " • 1 es café cortado,\r\n" + "• 2 es café Latte,\r\n" + "• 3 es café solo,\r\n"
				+ "• 4 es café lágrima.\r\n" + "• La opción 5, es para salir del programa.");
		num = ingreso.nextInt();

		switch (num) {

		case (1):
			System.out.println("usted quiere 1 cafe cortado");
			break;

		case (2):
			System.out.println("usted quiere 1 cafe latte");
			break;
		case (3):
			System.out.println("usted quiere 1 cafe solo");
			break;

		case (4):
			System.out.println("usted quiere 1 cafe lagrima");
			break;
		default:
			System.out.println("salio del programa");
			break;

		}

	}

}
